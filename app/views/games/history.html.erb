<div id="wrapper">

  <%= render 'games/sidebar' %>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <h1>History</h1>
      <% if @current_player %>
        <% if @current_player.is_gamemaker %>
          <h3>All Assassination History: <%= @history_info_all.length %></h3>
          <% if @history_info_all.length > 0 %>
            <table class="table table-sm">
              <thead>
              <tr>
                <th>#</th>
                <th>Time of Assassination</th>
                <th>Killer</th>
                <th>Victim</th>
                <th>Kill Type</th>
              </tr>
              </thead>
              <tbody>
              <% for i in 0..@history_info_all.length - 1 %>
                <tr>
                  <th scope="row"><%= @history_info_all.length - i%></th>
                  <td><%= @history_info_all[i][0] %></td>
                  <td><%= @history_info_all[i][1] %></td>
                  <td><%= @history_info_all[i][2] %></td>
                  <td><%= @history_info_all[i][3] %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          <% else %>
            <p>None available</p>
          <% end %>
        <% elsif @current_player.is_assassin %>
          <h3>Your Deaths: <%= @deaths_info.length %></h3>
          <% if @deaths_info.length > 0 %>
          <table class="table table-sm">
            <thead>
            <tr>
              <th>#</th>
              <th>Time of Death</th>
              <th>Assassinated by</th>
              <th>Kill Type</th>
            </tr>
            </thead>
            <tbody>
            <% for i in 0..@deaths_info.length - 1 %>
              <tr>
                <th scope="row"><%= @deaths_info.length - i %></th>
                <td><%= @deaths_info[i][0] %></td>
                <td><%= @deaths_info[i][1] %></td>
                <td><%= @deaths_info[i][2] %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
          <% else %>
            <p>None available</p>
          <% end %>
          <h3>Your Assassination History: <%= @history_info_self.length %></h3>
          <% if @history_info_self.length > 0 %>
            <table class="table table-sm">
              <thead>
              <tr>
                <th>#</th>
                <th>Time of Assassination</th>
                <th>Victim</th>
                <th>Kill Type</th>
              </tr>
              </thead>
              <tbody>
              <% for i in 0..@history_info_self.length - 1 %>
                <tr>
                  <th scope="row"><%= @history_info_self.length - i %></th>
                  <td><%= @history_info_self[i][0] %></td>
                  <td><%= @history_info_self[i][1] %></td>
                  <td><%= @history_info_self[i][2] %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          <% else %>
            <p>None available</p>
          <% end %>
        <% end %>
      <% end %>
      <h3>All Assassin Deaths: <%= @history_info_public.length %></h3>
      <% if @history_info_public.length > 0 %>
        <table class="table table-sm">
          <thead>
          <tr>
            <th>#</th>
            <th>Time of Death</th>
            <th>Victim</th>
          </tr>
          </thead>
          <tbody>
          <% for i in 0..@history_info_public.length - 1 %>
            <tr>
              <th scope="row"><%= @history_info_public.length - i %></th>
              <td><%= @history_info_public[i][0] %></td>
              <td><%= @history_info_public[i][1] %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% else %>
        <p>None available</p>
      <% end %>
    </div>

    <%= render 'layouts/footer' %>

  </div>
</div>