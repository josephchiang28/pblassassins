<div id="wrapper">

  <%= render 'games/sidebar' %>

  <div id="page-content-wrapper">
    <div class="container-fluid">
      <h1>Sponsors</h1>
    </div>
    
    <table class="table table-sm">
      <thead>
        <tr>
          <th>Sponsor</th>
          <th>Points</th>
          <% if @current_player and @current_player.is_gamemaker %>
            <th>Update Points</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% for i in 0..@sponsors.length - 1 %>
          <tr>
            <td><%= @sponsors[i].user.email %></td>
            <td><%= @sponsors[i].sponsor_points %></td>
            <% if @current_player and @current_player.is_gamemaker %>
              <td>
                <%= form_tag update_sponsor_points_path(name: @game.name, player_id: @sponsors[i].id) do %>
                  <%= number_field_tag(:new_points, nil, min: 0, required: true) %>
                  <%= submit_tag('Update', class: 'btn btn-secondary') %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= render 'layouts/footer' %>

  </div>
</div>